<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/activity_splash_ll"
        android:background="@drawable/splash_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="91dp">

        <ImageView
            android:scaleType="center"
            android:src="@drawable/splash_logo_2"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="120dp"/>

        <Button
            android:onClick="clickPlay"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textColor="#ffffff"
            android:text="@string/play"
            android:background="@drawable/splash_bt_bg_selector"
            android:layout_width="120dp"
            android:layout_height="40dp"/>

        <Button
            android:onClick="clickCache"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textColor="#ffffff"
            android:text="@string/offline_caching"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/splash_bt_bg_selector"
            android:layout_width="120dp"
            android:layout_height="40dp"/>

        <Button
            android:onClick="clickSettings"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textColor="#ffffff"
            android:text="@string/set_wifi"
            android:layout_marginBottom="90dp"
            android:background="@drawable/splash_bt_bg_selector"
            android:layout_width="120dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
