<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginBottom="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/activity_settings_back"
            android:onClick="click"
            android:layout_marginLeft="8dp"
            android:background="@drawable/settings_back"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <TextView
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:text="设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:weightSum="4"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:src="@drawable/settings_logo"
            android:layout_width="300dp"
            android:layout_height="0dp"/>


        <Button
            android:onClick="click"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            android:id="@+id/activity_settings_changeWiFiName"
            android:text="更改WiFi名称"
            android:background="@drawable/settings_bt_bg_selector"
            android:layout_width="150dp"
            android:layout_height="0dp"/>

        <Button
            android:onClick="click"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            android:id="@+id/activity_settings_changeWiFiPsw"
            android:text="更改WiFi密码"
            android:background="@drawable/settings_bt_bg_selector"
            android:layout_width="150dp"
            android:layout_height="0dp"/>

        <Button
            android:onClick="click"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="100dp"
            android:layout_weight="1"
            android:id="@+id/activity_settings_reset"
            android:text="恢复出厂设置"
            android:background="@drawable/settings_bt_bg_selector"
            android:layout_width="150dp"
            android:layout_height="0dp"/>
    </LinearLayout>

</RelativeLayout>
